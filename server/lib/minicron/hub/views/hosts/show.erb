<header class="clearfix">
  <h2 class="pull-left">Host '<%= @host.name %>'</h2>
  <a href="<%= "#{route_prefix}/host/#{@host.id}/delete" %>" class="pull-right btn btn-danger btn-sm">Delete</a>
  <a href="<%= "#{route_prefix}/host/#{@host.id}/edit" %>" class="pull-right btn btn-warning btn-sm">Edit</a>
</header>
<hr/>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= @host.name %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Hostname</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= @host.hostname %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Created At</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= Minicron.time(@host.created_at) %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Updated At</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= Minicron.time(@host.updated_at) %></div>
    </div>
  </div>
</form>

<header class="clearfix">
  <h2 class="pull-left">Executions</h2>
</header>
