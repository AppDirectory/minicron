<header class="clearfix">
  <h2 class="pull-left">Edit Host '<%= @host.name %>'</h2>
</header>
<hr/>

<form class="form-horizontal" role="form" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input name="name" type="text" value="<%= @host[:name] %>" class="form-control" placeholder="A nickname for the host e.g 'ted'"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Hostname</label>
    <div class="col-sm-10">
      <input name="hostname" type="text" value="<%= @host[:hostname] %>" class="form-control" placeholder="The hostname e.g db.company.net"/>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-success" value="Save"/>
      <a href="<%= "#{route_prefix}/host/#{@host.id}" %>" class="btn btn-danger">Cancel</a>
    </div>
  </div>
</form>
