<header class="clearfix">
  <h2>Profile</h2>
</header>
<hr/>

<form class="form-horizontal" role="form" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>

    <div class="col-sm-10">
      <input name="name" class="form-control" type="text" required maxlength="255" value="<%= current_user.name %>" placeholder="Your name"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>

    <div class="col-sm-10">
      <input name="email" class="form-control" type="email" required maxlength="255" value="<%= current_user.email %>" placeholder="Your email address"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">API Key</label>

    <div class="col-sm-10">
      <input disabled name="email" class="form-control" type="text" value="<%= current_user.api_key %>"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">New Password</label>

    <div class="col-sm-10">
      <input name="password" class="form-control" type="password" placeholder="Leave blank to not change"/>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-success" value="Update Profile"/>
    </div>
  </div>
</form>
